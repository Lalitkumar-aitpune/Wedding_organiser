{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/api/index.js" },

    { "src": "/assets/(.*)", "dest": "/client/assets/$1" },

    { "src": "/(.*\\.(css|js|png|jpg|jpeg|svg|ico|webp|json|woff|woff2|ttf))", "dest": "/client/$1" },

    { "src": "/", "dest": "/client/index.html" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}
